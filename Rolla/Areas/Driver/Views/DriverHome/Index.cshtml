@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Specifies the layout page to use
}

<h1>driver home page</h1> <!-- Page title -->
<!-- Form container with padding, rounded corners, shadow, light background, max width and centered -->
<form class="p-4 rounded shadow-sm bg-light" style="max-width: 500px; margin: auto; ">

    <!-- Input field for driver's name -->
    <div class="mb-3">
        <label for="nameInput" class="form-label">Name</label> <!-- Label for name input -->
        <input type="text" class="form-control custom-input" id="nameInput" placeholder="Enter name"> <!-- Text input -->
    </div>

    <!-- Input field for driver ID -->
    <div class="mb-3">
        <label for="driverIdInput" class="form-label">Driver ID</label> <!-- Label for driver ID input -->
        <input type="number" class="form-control custom-input" id="driverIdInput" placeholder="Enter driver ID"> <!-- Number input -->
    </div>

    <!-- Input field for type of car -->
    <div class="mb-3">
        <label for="typeOfCarInput" class="form-label">Type of Car</label> <!-- Label for car type input -->
        <input type="number" class="form-control custom-input" id="typeOfCarInput" placeholder="Enter type of car"> <!-- Number input -->
    </div>

    <!-- Submit button for the form -->
    <button type="submit" class="btn btn-primary w-100">Submit</button>
</form>

<!-- Container div for navigation button -->
<div class="parent">
    <div class="div8">
        <!-- Button to navigate to Home page -->
        <button type="button"
                class="btn btn-primary rounded-pill px-4 py-2 shadow d-flex align-items-center gap-2 transition"
                onclick="location.href='@Url.Action("Index", "Home", new { area = "" })'">
            <i class="bi bi-house-door-fill"></i> <!-- Home icon -->
            Go to Home <!-- Button text -->
        </button>
    </div>
</div>
