
@{  
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>driver home page</h1>



<form class="p-4 rounded shadow-sm bg-light" style="max-width: 500px; margin: auto; ">
    <div class="mb-3">
        <label for="nameInput" class="form-label">Name</label>
        <input type="text" class="form-control custom-input" id="nameInput" placeholder="Enter name">
    </div>
    
    <div class="mb-3">
        <label for="driverIdInput" class="form-label">Driver ID</label>
        <input type="number" class="form-control custom-input" id="driverIdInput" placeholder="Enter driver ID">
    </div>

    <div class="mb-3">
        <label for="typeOfCarInput" class="form-label">Type of Car</label>
        <input type="number" class="form-control custom-input" id="typeOfCarInput" placeholder="Enter type of car">
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit</button>
</form>




<div class="parent">
    <div class="div8">
<button type="button"
        class="btn btn-primary rounded-pill px-4 py-2 shadow d-flex align-items-center gap-2 transition"
        onclick="location.href='@Url.Action("Index", "Home", new { area = "" })'">
    <i class="bi bi-house-door-fill"></i>
    Go to Home
</button>
</div>
    </div>
