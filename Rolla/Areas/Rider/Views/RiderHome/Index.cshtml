@{
    // تعیین صفحه Layout کلی که این ویو از آن استفاده می‌کند
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<!--
    عنوان صفحه (اختیاری)
-->

<!--
    فرم دریافت اطلاعات Rider
    - از تگ فرم Razor استفاده شده که به اکشن Index کنترلر RiderController در ناحیه Rider ارسال می‌کند
    - متد ارسال POST است تا اطلاعات فرم به سرور ارسال شود
    - استایل‌ها برای ظاهر زیبا و کاربرپسند: padding، گوشه‌های گرد، سایه، پس‌زمینه روشن
    - حداکثر عرض فرم 500 پیکسل و وسط صفحه قرار گرفته است
-->
<form asp-Action="Index" asp-Controller="RiderController" asp-area="Rider" method="post"  
      class="p-4 rounded shadow-sm bg-light" style="max-width: 500px; margin: auto;">

    <!--
        بخش ورودی برای نام Rider
        - لیبل که به فیلد ورودی متصل است (با استفاده از id)
        - فیلد متنی برای وارد کردن نام Rider
        - کلاس‌های Bootstrap و custom برای ظاهر بهتر
        - placeholder راهنمایی برای کاربر درون فیلد
    -->
    <div class="mb-3">
        <label for="riderNameInput" name="Name" class="form-label">Rider Name</label>
        <input type="text" name="Name" class="form-control custom-input" id="riderNameInput" placeholder="Enter rider name">
    </div>

    <!--
        بخش ورودی برای نوع Rider
        - لیبل برای فیلد نوع Rider
        - فیلد عددی (number) برای وارد کردن نوع Rider
        - کلاس‌ها برای استایل Bootstrap و سفارشی
        - placeholder برای راهنمایی کاربر
    -->
    <div class="mb-3">
        <label for="riderTypeInput" name="RiderType" class="form-label">Rider Type</label>
        <input type="number" name="RiderType" class="form-control custom-input" id="riderTypeInput" placeholder="Enter rider type">
    </div>

    <!--
        دکمه ارسال فرم
        - دکمه از نوع submit که هنگام کلیک فرم را ارسال می‌کند
        - کلاس‌های Bootstrap برای ظاهر دکمه با استایل حاشیه‌ای تیره و عرض کامل
    -->
    <button type="submit" class="btn btn-outline-dark w-100">Submit</button>
</form>

<!--
    ظرف والد برای دکمه ناوبری به صفحه اصلی سایت
    - کلاس‌های parent و div8 برای چینش با CSS Grid یا Flexbox (بسته به تعریف CSS)
-->
<div class="parent">
    <div class="div8">
        <!--
            دکمه‌ای برای بازگشت به صفحه Home
            - با کلیک روی دکمه، به آدرس اکشن Index کنترلر Home (بدون ناحیه) هدایت می‌شود
            - استایل‌ها برای ظاهر دکمه، گرد کردن گوشه‌ها، فاصله داخلی، سایه و چینش داخلی
            - آیکون خانه از Bootstrap Icons قبل از متن نمایش داده شده است
        -->
        <button type="button"
                class="btn btn-dark rounded-pill px-4 py-2 shadow d-flex align-items-center gap-2 transition"
                onclick="location.href='@Url.Action("Index", "Home", new { area = "" })'">
            <i class="bi bi-house-door-fill"></i>
            Go to Home
        </button>
    </div>
</div>
